<script>
document.addEventListener("DOMContentLoaded",()=>{
	fetch("/uploadlast7days")
	.then(data => data.json())
	.then(res => {
		document.getElementById("uploadfile").textContent = res
		
	})


	fetch("/uploaduserlast7days")
	.then(data => data.json())
	.then(res => {
		document.getElementById("uploaduser").textContent = res

	})



	fetch("/uploadimageslast7days/pdf")
	.then(data => data.json())
	.then(res => {
		document.getElementById("images").textContent = res
	})


	fetch("/uploadimageslast7days/txt")
	.then(data => data.json())
	.then(res => {
		document.getElementById("txt").textContent = res
	})

	fetch("/adminshowallfiles")
		.then(data => data.json())
		.then(result => {
		const list = document.querySelector("#userlist");
		result.map(res =>{
			const row = document.createElement('tr');
        row.innerHTML = `
                    <td>${res.username}</td>
                    <td>${res.extname}</td>
                    <td>${res.bucketname}</td>
					<td>${res.foldername}</td>
					<td>${res.filename}</td>
                    <td>${res.createdAt}</td>
                    `;
        list.appendChild(row);
		})

		})
})

</script>  